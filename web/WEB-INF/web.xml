<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
	<display-name>origami</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

  <!-- 设置log4j存放Log文件位置（通过spring统一进行管理） -->
	 <context-param>
	  <param-name>webAppRootKey</param-name>
	  <param-value>log.root</param-value>
	 </context-param>
  
  <!-- 加载log4j的配置文件 -->	
	<context-param>  
	    <param-name>log4jConfigLocation</param-name>  
	    <param-value>classpath:config/log4j.properties</param-value>  
	</context-param> 
  <!--Spring默认刷新Log4j配置文件的间隔,单位为millisecond-->
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>60000</param-value>
	</context-param>
    <listener>  
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>  
    </listener>  
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:config/applicationContext-common.xml</param-value>
	</context-param>
	
    <!-- Spring监听器 -->  
    <listener>  
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>  
    </listener>  
    <!-- 防止Spring内存溢出监听器 -->  
    <listener>  
        <listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>  
    </listener>
	
	<!-- spring中文编码过滤器 -->
	<filter>     
		<filter-name>springCharacterEncodingFilter</filter-name>     
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>     
		<init-param>     
			<param-name>encoding</param-name>     
			<param-value>utf8</param-value>     
		</init-param>     
	</filter>     
	<filter-mapping>     
    	<filter-name>springCharacterEncodingFilter</filter-name>     
	    <url-pattern>/*</url-pattern>     
	</filter-mapping>
	
	<!-- sso修改密码过滤器 -->
	<filter>
		<filter-name>ssoPasswordFilter</filter-name>
		<filter-class>chok.sso.filter.PasswordFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ssoPasswordFilter</filter-name>
		<url-pattern>/auth/password.action</url-pattern>
	</filter-mapping>
	<!-- sso登出过滤器 -->
	<filter>
		<filter-name>ssoLogoutFilter</filter-name>
		<filter-class>chok.sso.filter.LogoutFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ssoLogoutFilter</filter-name>
		<url-pattern>/auth/logout.action</url-pattern>
	</filter-mapping>
	<!-- sso登录过滤器 -->
	<filter>
		<filter-name>ssoLoginFilter</filter-name>
		<filter-class>chok.sso.filter.LoginFilter</filter-class>
		<init-param>
			<param-name>ssoURL</param-name>     
			<param-value>http://172.20.4.113:8585/sso</param-value>     
		</init-param>
		<init-param>
			<param-name>ssoAuthURL</param-name>     
			<param-value>http://172.20.4.113:8585/sso/auth</param-value>     
		</init-param>
		<init-param>
			<param-name>ssoApiURL</param-name>     
			<param-value>http://172.20.4.113:8585/sso/api</param-value>     
		</init-param>
		<init-param>
			<param-name>ignoreURL</param-name>     
			<param-value>/noaccess.jsp</param-value>     
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>ssoLoginFilter</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>
	<!-- sso授权过滤器 -->
	<filter>
		<filter-name>ssoAuthFilter</filter-name>
		<filter-class>chok.sso.filter.AuthFilter</filter-class>
		<init-param>
			<param-name>ssoURL</param-name>     
			<param-value>http://172.20.4.113:8585/sso</param-value>     
		</init-param>
		<init-param>
			<param-name>ssoApiURL</param-name>     
			<param-value>http://172.20.4.113:8585/sso/api</param-value>     
		</init-param>
		<init-param>
			<param-name>ignoreURL</param-name>     
			<param-value>
			/admin/home/get.action,
			/admin/home/searchMenu.action,
			/admin/image/add1.action,
			/admin/image/add2.action,
			/admin/image/getById.action,
			/admin/image/upd1.action,
			/admin/image/upd2.action,
			/images/*,
			/noaccess.jsp
			</param-value>     
		</init-param>
		<init-param>
			<param-name>appId</param-name>
			<param-value>3</param-value>     
		</init-param>
		<init-param>
			<param-name>isNeedChkAct</param-name>     
			<param-value>1</param-value>     
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>ssoAuthFilter</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>
	 
    <!-- Spring MVC servlet -->  
    <servlet>  
        <servlet-name>springmvc</servlet-name>  
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>  
        <load-on-startup>1</load-on-startup>  
        <!-- 
        <init-param>  
            <param-name>contextConfigLocation</param-name>  
            <param-value>classpath:config/spring-mvc.xml</param-value>  
        </init-param>
          --> 
    </servlet>  
    <servlet-mapping>  
        <servlet-name>springmvc</servlet-name>  
        <!-- 此处可以可以配置成*.do，对应struts的后缀习惯 -->  
        <url-pattern>*.action</url-pattern>  
    </servlet-mapping>
</web-app>